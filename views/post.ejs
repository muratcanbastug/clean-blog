<%- include('partials/_header') -%>

<body>
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= content.post_title %></h1>
            <h2 class="subheading"><%= content.sub_title %></h2>
            <span class="meta">Posted by
              <a href="#"><%= content.author %></a>
              <%= "on " + content.createdDate.toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
    <div class="container-fluid">
      <div class="mx-auto tm-content-container">
        <main>
          <div class="col-lg-8 col-md-10 mx-auto">
            <p> <%= content.content %> </p>
          </div>
          <div class="mx-auto tm-content-container">
            <div class="row mb-5 pb-5">
              <div class="col-xl-4 col-lg-5">
                <div class="tm-bg-gray tm-share-box">
                  <div class="text-center">
                    <a href="/post/edit/<%=content._id%>" class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Details</span></a>	
                  </div>	
                  <div class="text-center">
                    <a href="/post/<%=content._id%>/?_method=DELETE" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"
                      onclick="return confirm('Are you sure?')"> <span>Delete the Content</span></a>	
                  </div>								
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
  <hr>

  <%- include('partials/_footer') -%>

</body>

</html>
